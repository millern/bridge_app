<title>Sign up</title>
<h1>Sign up</h1>
<% if @error_messages %>
<%= @error_messages %>
<% end %>

<%= form_for(@user) do |f| %>

	<%= f.label :name %>
	<%= f.text_field :name %>
	<br />
	<%= f.label :email %>
	<%= f.text_field :email %>
	<br />
	<%= f.label :password %>
	<%= f.password_field :password %>
	<br />
	<%= f.label :password_confirmation %>
	<%= f.password_field :password_confirmation %>
	<br />
	<%= f.submit "Create new account" %>

<% end %>
